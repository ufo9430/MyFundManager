<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/check_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/check_initialinvest"
        android:text="사용자명"
        android:textSize="30dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/check_initialinvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="투자금액"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/check_currentinvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_initialinvest"
        android:text="현재금액"
        android:textSize="25dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/check_usergain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_currentinvest"
        android:text="사용자 펀드 게인"
        android:textAlignment="center"
        android:textSize="25dp" />
</RelativeLayout>